<div class="container">
<h1><%= @category.capitalize %></h1>
<div class="inner ">
  <div class="row flex">
<div class="col s8">
    <% @sources.each do |source| %>
        <div class="m6">
          <div class="card blue-grey darken-1 hoverable">
            <div class="card-content ">
              <span class="card-title orange-text"><%= source.name %></span>
              <p><%= source.description %></p>
              <p>Category:<%= source.category %></p>
              <p><%= link_to source.url, source.url, target: :_blank %></p>
              <div class="card-action">
                <%= link_to "Headline News", show_publisher_path(sources: source.source_id) %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
  <div class="col s4">
    <div class="categories row">
<p><%= link_to "business",publishers_path(category:"business")  %></p>
<p><%= link_to "entertainment",publishers_path(category:"entertainment")  %></p>
<p><%= link_to "general",publishers_path(category:"general")  %></p>
<p><%= link_to "science",publishers_path(category:"science")  %></p>
<p><%= link_to "sports",publishers_path(category:"sports")  %></p>
<p><%= link_to "technology",publishers_path(category:"technology")  %></p>
</div>
  </div>
</div>
</div>
</div>