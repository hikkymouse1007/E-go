<div class="header-content">
  <h1 class="header-content-title">E-Go!</h1>
</div>
<div class="container">
  <nav>
    <div class="nav-wrapper pink lighten-2">
      <ul id="nav-mobile" class="hide-on-med-and-down list-center">
        <li><%= link_to "Home",root_path %></li>
        <li><%= link_to "Publishers",publishers_path(category: "general") %></li>
     </ul>
    </div>
  </nav>
  <h3 class="center"><%= @today %>の最新ニュース</h3>
  <div class="inner ">
    <div class="row flex">
      <% @all_articles.each do |headline| %>
      <div class="col s12 m3">
        <div class="card white hoverable">
          <a class="waves-effect waves-light btn modal-trigger" href="#modal1"><%= headline.title %></a>
          <div id="modal1" class="modal">
            <div class="modal-content">
              <h4>Modal Header</h4>
              <p>A bunch of text</p>
            </div>
            <div class="modal-footer">
              <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
            </div>
          </div>
          <%= link_to(headline.url,target: :_blank) do %>
          <div class="card-image">
          <%=  image_tag headline.urlToImage,size:"auto" %>
          </div>
          <div class="card-content black-text">
            <p><%= headline.title %></p>
          </div>
          <% end %>
          <div class="card-action">
            <%= link_to "記事にする", new_user_article_path(title: headline.title,url: headline.url, publishedAt: headline.publishedAt) %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
  <div  class= "center-align">
    <%= paginate @all_articles %>
</div>


<script>$(document).ready(function(){
    $('.modal').modal();
  });</script>