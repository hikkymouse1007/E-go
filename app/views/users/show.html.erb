<div class="container">
  <div class="inner">
    <%= render partial: 'shared/link_nav_user' %>
    <nav>
      <div class="nav-wrapper  green lighten-2">
        <ul id="nav-mobile" class="list-center hide-on-med-and-down">
          <li><%= link_to "全記事", user_path %></li>
          <% @categories.each do |key, value| %>
          <li><%= link_to key, user_path(category:value) %></li>
          <% end %>
       </ul>
      </div>
    </nav>
      <div class="row">
        <h1 class="center">マイページ</h1>
        <div class="col s12 " >
          <% @articles.each do |article| %>
            <div class="card white hoverable">
              <div class="card-content ">
                <span class="card-title ">
                  <%= article.title %>
                </span>
                <div class="content black-text">
                <p><%= article.japanese_title%></p><br>
                <p> Published at <%= article.published_at %></p>
                <p><%= link_to article.url,article.url,class: "blue-text" ,target: :_blank%></p>
                </div>
                <div class="chip green lighten-2">
                  <%= link_to article.category, user_path(category:article.category), class: "white-text"%>
                </div>
              </div>
              <div class="card-action center-align">
                <div class="option">
                  <%= link_to  "Show", user_article_path(id: article.id) ,class: 'btn blue lighten-2'%>
                  <%= link_to  "Edit", edit_user_article_path(id:article.id) ,class: 'btn green accent-3'%>
                  <%= link_to  "Delete", user_article_path(id: article.id), method: :delete, class: 'btn red darken-1', data: { confirm: "記事を削除しますか？" } %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
  <div class="pagination center-align">
    <%= paginate @articles %>
  </div>
</div>
