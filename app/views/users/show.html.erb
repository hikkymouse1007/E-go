<div class="container">
  <%= link_to "登録している単語一覧", user_words_path %>
<div class="inner ">
  <div class="row">

    <div class="your-article" >
    <% @articles.each do |article| %>
      <div class="col s12 m12">
        <div class="card blue-grey darken-1 hoverable">
          <div class="card-content white-text">
            <span class="card-title">
              Title:<%= link_to article.title, user_article_path(id: article.id) %>
            </span>
            <p><%= article.japanese_title%></p>
            <p>Category:<%= article.category %></p>
            <p> Published at <%= article.published_at %></p>
            <p>Source:<%= link_to article.url,article.url,target: :_blank%></p>
          </div>
          <div class="card-action center-align">
            <div class="option">
              <%= link_to  "Edit", edit_user_article_path(id:article.id) ,class: 'btn'%>
            <%= link_to  "Delete", user_article_path(id: article.id), method: :delete, class: 'btn' %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <%= paginate @articles %>
    </div>
  </div>
</div>

