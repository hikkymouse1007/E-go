<div class="inner ">
  <%= @current_user.name %> <%= @current_user.email %>
  <div class="row">
    <ul id="tabs-swipe-demo" class="tabs">
      <li class="tab col s3"><a href="#your-article">Your Articles</a></li>
      <li class="tab col s3"><a class="active" href="#vocabulary">Vocabularies</a></li>
    </ul>

  <div id="your-article" class="col s12 blue">
  <% @articles.each do |article| %>
    <div class="col s12 m12">
      <div class="card blue darken-1">
        <div class="card-content white-text">
          <span class="card-title"></span>
          <p>"<%= link_to  article.title, user_article_path(id: article.id) %>"</p>
          <p><%= article.published_at%></p>
          <p>URL:<%= article.url%></p>
          <p><%= link_to  "Delete", user_article_path(id: article.id), method: :delete %></p>
        </div>
        <div class="card-action">
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div id="vocabulary" class="col s12 red">
    <p>Vocabularies</p>
    <% @articles.each do |article| %>
      <% article.vocabs.each do |vocab|%></p>
        <% unless @vocab_ary.include?(vocab.english) %>
          <%= vocab.english %>:<%= vocab.japanese %>
          <% @vocab_ary << vocab.english %>
        <% end %>
      <% end %>
    <% end %>

  </div>
    <p><%= link_to "記事の新規投稿" , new_user_article_path(current_user) %></p>
  </div>
</div>
