<div class="container">
  <nav>
    <div class="nav-wrapper pink lighten-2">
      <ul id="nav-mobile" class="center hide-on-med-and-down">
        <li><%= link_to "All",user_path %></li>
        <li><%= link_to "Business",user_category_path(category:1) %></li>
        <li><%= link_to "Entertainment",user_category_path(category:2) %></li>
        <li><%= link_to "General",user_category_path(category:3) %></li>
        <li><%= link_to "Health",user_category_path(category:4) %></li>
        <li><%= link_to "Science",user_category_path(category:5) %></li>
        <li><%= link_to "Sports",user_category_path(category:6) %></li>
        <li><%= link_to "Technology",user_category_path(category:7) %></li>
        <li><%= link_to "Other",user_category_path(category:8) %></li>
     </ul>
    </div>
</nav>
<div class="inner ">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col s12 m12">
        <div class="card white darken-1 hoverable">
          <div class="card-content ">
            <span class="card-title ">
              <%= article.title %>
            </span>
            <div class="content black-text">
            <p><%= article.japanese_title%></p>
            <p>Category:<%= article.category %></p>
            <p> Published at <%= article.published_at %></p>
            <p>外部リンク:<%= link_to article.url,article.url,class: 'blue-text',target: :_blank%></p>
            </div>
          </div>
          <div class="card-action center-align">
            <div class="option">
             <%= link_to  "Show", user_article_path(id: article.id) ,class: 'btn blue lighten-2'%>
              <%= link_to  "Edit", edit_user_article_path(id:article.id) ,class: 'btn green accent-3'%>
            <%= link_to  "Delete", user_article_path(id: article.id), method: :delete, class: 'btn red darken-1' %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    </div>
  </div>
<div class="pagination center-align">
  <%= paginate @articles %>
</div>


