<div class="row">
  <div class="col-md-6">
    <h2 class="center-align">Signup</h2>
    <div class="row">
      <%= form_with model: @user, url:create_user_path,local: true do |f| %>
      <%= render 'shared/error_messages' %>
      <div class="row">
        <div class="input-field col s12"> 
          <%= f.label :name %>
          <%= f.text_field :name%>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12"> 
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12"> 
        <%= f.label :password %>
        <%= f.password_field :password %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12"> 
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>
        </div>
      </div>
        <%= f.submit "Create New Account", class: "btn btn-primary " %>
      <% end %>
    </div>
  </div>
</div>



