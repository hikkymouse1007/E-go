<div class="container">
<div class="row flex">
  <div class="col s12 m6 center">
    <h2>Signup</h2>
    <div class="row">
      <%= form_with model: @user, url:create_user_path,local: true do |f| %>
      <%= render 'shared/error_messages' %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :name %>
          <%= f.text_field :name%>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
        <%= f.label :password %>
        <%= f.password_field :password %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>
        </div>
      </div>
        <%= f.submit "Create New Account", class: "btn btn-primary blue lighten-2 " %>
      <% end %>
      <%= form_with scope: :session, url:login_path, local: true do |f| %>
        <%= f.hidden_field :email, value: 'test@mail.com' %>
        <%= f.hidden_field :password, value: 'foobar' %>
        <p><%= f.submit "テストユーザーログイン", class: "btn  blue lighten-2" %></p>
      <% end %>
    </div>
  </div>

</div>
</div>



